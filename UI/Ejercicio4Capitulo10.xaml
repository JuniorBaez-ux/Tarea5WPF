<Window x:Class="Tarea5WPF.UI.Ejercicio4Capitulo10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarea5WPF.UI"
        mc:Ignorable="d"
        Title="Ejercicio 4 Capitulo 10" Height="310" Width="592">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Label Content="Inserte la cantidad de lados que tiene la figura poligonal"/>
            <TextBox x:Name="LadosTextBox" Height="20" Width="90" HorizontalAlignment="Left"/>

            <StackPanel Orientation="Vertical" Margin="0,15">
                <Label Content="Inserte la longitud de uno de sus lados "/>
                <TextBox x:Name="LongitudTextBox" Height="20" Width="90" HorizontalAlignment="Left"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Margin="0,25">
                <Button Height="20" Content="Calcular" Margin="0,15" x:Name="CalcularButton" Click="CalcularButton_Click"/>
                <Label Content="Resultado" Margin="10,0"/>
                <TextBox x:Name="ResultadoTextBox" IsReadOnly="True" Height="20" Width="90"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
